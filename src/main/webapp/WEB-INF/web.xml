<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         version="3.1" metadata-complete="false">
  <display-name>Cellphone</display-name>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>/</welcome-file>
  </welcome-file-list>
  
  <!-- Cấu hình cho phép truy cập thư mục img_Url -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/img_Url/*</url-pattern>
  </servlet-mapping>
  
  <!-- Cấu hình cho phép truy cập thư mục css -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/css/*</url-pattern>
  </servlet-mapping>
  
  <!-- Cấu hình cho phép truy cập thư mục css của staff -->
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/staff/css/*</url-pattern>
  </servlet-mapping>
  
</web-app>

